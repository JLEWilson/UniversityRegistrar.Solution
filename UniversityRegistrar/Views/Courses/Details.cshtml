@{
  Layout = "_Layout";
}

@model Registrar.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>No students are enrolled in this class</p>
}
else
{
  <h4>Students enrolled in this course</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to list of courses", "Index")</p>
<p>@Html.ActionLink("Edit this course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete this course", "Delete", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>